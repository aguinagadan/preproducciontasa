{{!
    @template block_myoverview/welcome-section
    This template renders a welcome section of course overview block.
}}
<div class="w-full p-10 bg-white rounded" id="welcome-section">
    <h5 class="pt-10 pl-15 pr-15 pb-15 m-0 bold">{{#str}}coursestats, theme_remui{{/str}}</h5>
    <div class="mideco-subrayado"></div>
    {{! Course Stats }}
    <div class="card-block p-20">
        <div class="row text-center mb-20">
           <div class="col-6">
                <div class="counter">
                    <div class="counter-number font-size-24 mideco-fullwidth">{{ totalcourses }}</div>
                    <div class="counter-label mideco-fullwidth">{{#str}}enrolledcourses, theme_remui{{/str}}</div>
                </div>
            </div>
            <div class="col-6">
                <div class="counter">
                    
                    <div class="counter-number blue-600 font-size-24 mideco-fullwidth">{{ totalactivities }}</div>
                    <div class="counter-label mideco-fullwidth">{{#str}}courseactivities, theme_remui{{/str}}</div>
                </div>
            </div>
        </div>
    </div>

    {{! User Stats }}
    <div class="card-block">
        <div class="row text-center mb-20">
            <div class="col-6">
                <div class="counter">
                    
                    <div class="pie-progress pie-progress-sm" data-plugin="pieProgress" data-valuemax="100" data-barcolor="#76a240" data-size="100" data-barsize="10" data-goal="86" aria-valuenow="{{ courseprogress }}" role="progressbar">
                        <div class="pie-progress-content" style = "z-index:2;">
                            <div class="pie-progress-number">{{ courseprogress }}&#37;</div>
                        </div>
                    </div>
                    <div class="counter-label pt-15">{{#str}}coursecompleted, theme_remui{{/str}}</div>
                </div>
            </div>
            <div class="col-6">
                <div class="counter">
                    
                    <div class="pie-progress pie-progress-sm" data-plugin="pieProgress" data-valuemax="100" data-barcolor="#76a240" data-size="100" data-barsize="10" data-goal="86" aria-valuenow="{{ activitiesprogress }}" role="progressbar">
                        <div class="pie-progress-content" style = "z-index:2;">
                            <div class="pie-progress-number">{{ activitiesprogress }}&#37;</div>
                        </div>
                    </div>
                    <div class="counter-label pt-15">{{#str}}activitycompleted, theme_remui{{/str}}</div>
                </div>
            </div>
        </div>
    </div>
</div>
