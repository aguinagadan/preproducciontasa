{{!
    @template block_myoverview/courses-view-course-item

    This template renders the course summary (view by courses) for the myoverview block.

    Example context (json):
    {
        "fullnamedisplay": "course 3",
        "viewurl": "https://www.google.com",
        "summary": "It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."
    }
}}
<div class = "col-md-4 col-lg-4 px-0 mx-10 hidden mideco-sombrapanelmyoverview">
    <div class="card mb-0">
        <figure class="overlay overlay-hover rounded">
        <div  class="courses-slides overlay-figure overlay-scale" style="background: url('{{ imageurl }}');background-size: cover;background-position: center;height: 180px;">
        </div>

        <div class=" overlay-figure NOoverlay-scale w-full row ml-0 mr-0 d-flex align-items-center text-white font-weight-bold" style="background-color:{{color}};">
            <div class="mideco-altoespaciobarra">
                <div class="mideco-circle-back fill d-flex align-items-center col-12 col-lg-12" data-fill="44">
                    <p class="circle-text font-size-10"></p>
                </div>
                {{#hasprogress}}            
                <!-- Fillable bubble -->
                <div class="circle fill d-flex align-items-center col-12 col-lg-12" data-fill="44" style="background:linear-gradient(#a9c199 {{waterPercentage}}%,#4d7f24 1%);">
                    <p class="circle-text font-size-10">{{progress}} %</p>
                </div>
                <!-- / Fillable bubble -->
                {{/hasprogress}}
            </div>
            <div class="col-12 col-lg-12 float-left mideco-contenedortitulooverview"><div class="mideco-titulooverview"><a href = "{{ viewurl }}"  class="text-white">{{{ fullnamedisplay }}}</a></div></div>
            <div class="col-12 col-lg-12 float-left mideco-centrandoboton"><a href = "{{ viewurl }}" class="btn btn-primary">Ir al curso</a></div>
        </div>
        <figcaption onclick="location.href='{{ viewurl }}';" class="overlay-panel overlay-background overlay-fade text-center vertical-align" style="cursor: pointer;">
            
        </figcaption>
        </figure>
    </div>
</div>